[Unit]
Description=Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=ripa
WorkingDirectory=/home/ripa/sites/SITENAME/superlists
ExecStart=/home/ripa/sites/SITENAME/virtualenv/bin/gunicorn \ --bind unix:/tmp/SITENAME.socket \ superlists.wsgi:application

[Install]
WantedBy=multi-user.target
